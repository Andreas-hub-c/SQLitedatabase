using HtmlTables, HTTP

ENV["htmltables_dbpath"]=raw"C:\Users\wellens.a\Desktop\information management test5.db" # verwijs hier naar je eigen dbpath, anders zal de code niet werken :)
<html>
	<head>
		<title>Soldier Filter Input</title>
	</head>
	<body>
		<h1>On this page you can ask the information for a specific soldier.</h1>
		<form action='SoldierFiltered'>
			<label for='ArmyNumber'>ArmyNumber:</label><br>
			<input type='text' id='ArmyNumber' name='ArmyNumber' value=''><br>
			<br>
			<br>
			<input type='submit' value='Get Soldier'>
		</form>
	</body>
</html>

requestedArmyNumber = parse(Int64,queryParameters[ArmyNumber])

sqlQry = "SELECT
	s.firstName,
	s.ArmyNumber
	s.grou
	dmr.SerialNumber,

	FROM
		Soldier s
			INNER JOIN DosimeterAssignment da ON s.ArmyNumber = da.ArmyNumber
			INNER JOIN Dosimeter dm ON dm.SerialNumber = da.serialNumber
	WHERE s.ArmyNumber = $requestedArmyNumber;
"
"<html>
	<head>
		<style>
			table, th, td {
				border: 1px solid black;
			}
		</style>
		<title>hoi, dit is de DosimeterAssignment</title>
	</head>
	<body>
	$(htmlTableForQuery(sqlQry))
	</body>
</html>"
end


HTTP.register!(ROUTER, "GET", "/dosimeterassignment", dosimeterassignment)



