SELECT
  s.firstName,
  s.surName,
  s.ArmyNumber,
  dm.SerialNumber,
  dmr.DateReadOut,
  dmr.DateDoseFrom,
  dmr.DateDoseTo,
  dmr.dosemv
FROM Soldier s
JOIN dosiMeterAssignement da ON s.ArmyNumber = da.ArmyNumber
JOIN dosiMeter dm ON da.SerialNumber = dm.SerialNumber
JOIN dosiMeterReading dmr ON dm.SerialNumber = dmr.SerialNumber
WHERE dmr.DateDoseFrom = <chosen_month>;                 -- geef in <chosen_month> de juiste maand in
GROUP BY s.firstName, s.surName, s.ArmyNumber, dm.SerialNumber, dmr.DateReadOut, dmr.DateDoseFrom, dmr.DateDoseTo;

