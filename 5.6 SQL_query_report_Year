SELECT
  Soldier.firstName,
  Soldier.surName,
  Soldier.ArmyNumber,
  dosiMeter.SerialNumber,
  dmr.DateReadOut, 
  dmr.DateDoseFrom,
  dmr.DateDoseTo,
  dmr.dosemv
FROM Soldier
JOIN dosiMeterAssignement da ON Soldier.ArmyNumber = da.ArmyNumber
JOIN dosiMeter ON da.SerialNumber = dosiMeter.SerialNumber
JOIN dosiMeterReading dmr ON dm.SerialNumber = dmr.SerialNumber 
WHERE YEAR(dmr.DateReadOut) = <chosen_year>;                           -- gelieve hier het jaar in te geven
GROUP BY Soldier.firstName, Soldier.surName, Soldier.ArmyNumber, dosiMeter.SerialNumber, dmr.DateReadOut, dmr.DateDoseFrom, dmr.DateDoseTo, dmr.dosemv
ORDER BY Soldier.firstName, Soldier.surName, Soldier.ArmyNumber;
