SELECT
  Soldier.firstName,
  Soldier.surname,
  Soldier.ArmyNumber,
  dosimeter.serialNumber,
  doseReadout.dateReadOut,
  doseReadout.dateDoseFrom,
  doseReadout.dateDoseTo,
  doseReadout.doseSv
FROM Soldier
JOIN dosimeterAssignment ON Soldier.ArmyNumber = dosimeterAssignment.ArmyNumber
JOIN dosimeter ON dosimeterAssignment.dosimeterID = dosimeter.dosimeterID
JOIN doseReadout ON dosimeter.dosimeterID = doseReadout.dosimeterID
WHERE YEAR(doseReadout.dateReadOut) = <chosen_year>                           -- gelieve hier het jaar in te geven 
GROUP BY Soldier.firstName, Soldier.surname, Soldier.ArmyNumber, dosimeter.serialNumber, doseReadout.dateReadOut, doseReadout.dateDoseFrom, doseReadout.dateDoseTo, doseReadout.doseSv
ORDER BY Soldier.firstName, Soldier.surname, Soldier.ArmyNumber;
