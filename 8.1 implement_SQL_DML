function 5_1(req::HTTP.Messages.Request)
  @info "5_1"
  sqlQry = "SELECT 
  firstName, 
  surname, 
  nationality, 
  language
  FROM Soldier;
  "
  "
    <html>
    	<head>
	    	<style>
	    		table, th, td {
		    		border: 1px solid black;
		    	}
		    </style>
		    <title>hoi, dit is de DosimeterAssignment</title>
    	</head>
    	<body>
      	$(htmlTableForQuery(sqlQry))
    	</body>
    </html>
"
end
