function 5_3(req::HTTP.Messages.Request)
  @info "5_3"
  sqlQry = "SELECT firstName, 
  surname, 
  nationality, 
  language
  FROM Soldier
  WHERE ArmyNumber = 1963253;
  "
  "
    <html>
    	<head>
	    	<style>
	    		table, th, td {
		    		border: 1px solid black;
		    	}
		    </style>
		    <title>hoi, dit is de DosimeterAssignment</title>
    	</head>
    	<body>
      	$(htmlTableForQuery(sqlQry))
    	</body>
    </html>
"
end
function 5_4(req::HTTP.Messages.Request)
  @info "5_4"
  sqlQry = "SELECT
  Soldier.ArmyNumber,
  Soldier.firstName,
  Soldier.surName,
  dosiMeterAssignement.SerialNumber,
  dosimeter.Type
  FROM Soldier
  JOIN dosiMeterAssignement ON Soldier.ArmyNumber = dosiMeterAssignement.ArmyNumber
  JOIN dosiMeter ON dosiMeterAssignement.SerialNumber = dosiMeter.SerialNumber;
  "
  "
    <html>
    	<head>
	    	<style>
	    		table, th, td {
		    		border: 1px solid black;
		    	}
		    </style>
		    <title>hoi, dit is de DosimeterAssignment</title>
    	</head>
    	<body>
      	$(htmlTableForQuery(sqlQry))
    	</body>
    </html>
"
end
function 5_5(req::HTTP.Messages.Request)
  @info "5_5"
  sqlQry = "SELECT s.firstName,
       s.surName,
       s.armyNumber,
       dr.serialNumber,
       dr.dateReadOut,
       dr.dateDoseFrom,
       dr.dateDoseTo,
       dr.dosemsv
  FROM Soldier s, DosimeterAssignment da, DosiMeterReading dmr
  WHERE s.armyNumber = da.armyNumber
      AND da.serialNumber = dmr.serialNumber
      AND dmr.dateDoseFrom = "2021-04";    -- geef jaar en maand in bv. 2021-04
  GROUP BY s.firstName, s.surName, s.ArmyNumber, dm.SerialNumber, dmr.DateReadOut, dmr.DateDoseFrom, dmr.DateDoseTo;
  "
  "
    <html>
    	<head>
	    	<style>
	    		table, th, td {
		    		border: 1px solid black;
		    	}
		    </style>
		    <title>hoi, dit is de DosimeterAssignment</title>
    	</head>
    	<body>
      	$(htmlTableForQuery(sqlQry))
    	</body>
    </html>
"
end
function 5_6(req::HTTP.Messages.Request)
  @info "5_6"
  sqlQry = "SELECT s.firstName,
       s.surName,
       s.armyNumber,
       SUM(dr.dosemv) 
  FROM Soldier s, DosimeterAssignment da, DosiMeterReading dmr
  WHERE s.armyNumber = da.armyNumber
      AND da.serialNumber = dmr.serialNumber
      AND dmr.serialNumber = "1004"  -- geef hier het serienummer voor de dosimeterreading in 
      AND dmr.dateDoseFrom BETWEEN "2025-01-01" AND "2025-12-31"  -- geef hier de data in waartussen het moet liggen (1jaar)
  GROUP BY s.firstName, s.surName, s.armyNumber;
  "
  "
    <html>
    	<head>
	    	<style>
	    		table, th, td {
		    		border: 1px solid black;
		    	}
		    </style>
		    <title>hoi, dit is de DosimeterAssignment</title>
    	</head>
    	<body>
      	$(htmlTableForQuery(sqlQry))
    	</body>
    </html>
"
end

# Register routes for all pages
HTTP.register!(ROUTER, "GET", "/soldier", soldier)
HTTP.register!(ROUTER, "GET", "/extsoldier", extsoldier)
HTTP.register!(ROUTER, "GET", "/dosimeter", dosimeter)
HTTP.register!(ROUTER, "GET", "/dosimeterassignment", dosimeterassignment)
HTTP.register!(ROUTER, "GET", "/dosimeterreading", dosimeterreading)
HTTP.register!(ROUTER, "GET", "/soldier_phones", soldier_phones)
HTTP.register!(ROUTER, "GET", "/5_1", 5_1)
HTTP.register!(ROUTER, "GET", "/5_2", 5_2)
HTTP.register!(ROUTER, "GET", "/5_3", 5_3)
HTTP.register!(ROUTER, "GET", "/5_4", 5_4)
HTTP.register!(ROUTER, "GET", "/5_5", 5_5)
HTTP.register!(ROUTER, "GET", "/5_6", 5_6)
HTTP.register!(ROUTER, "GET", "/", home)
end

server = HTTP.serve!(ROUTER, "127.0.0.1", 50)

#close(server)

          
