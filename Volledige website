function vijfpunteen(req::HTTP.Messages.Request)
  @info "vijfpuntéén"
  sqlQry = "SELECT 
  firstName, 
  surname, 
  nationality, 
  language
  FROM Soldier;
  "
  "
    <html>
    	<head>
	    	<style>
	    		table, th, td {
		    		border: 1px solid black;
		    	}
		    </style>
		    <title>hoi, dit is de DosimeterAssignement</title>
    	</head>
    	<body>
      	$(htmlTableForQuery(sqlQry))
    	</body>
    </html>
"
end
